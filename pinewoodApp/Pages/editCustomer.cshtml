@page
@model EditCustomerModel
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit Customer";
}
<div class="text-center">
    <h1 class="display-4">Edit Customer</h1>
</div>

</br>
<form method="post" asp-page-handler="update">
    <div class="form-group">
        <label asp-for="customer.firstName">First Name</label>
        <input type="text" name="firstName">
    </div>
    <div class="form-group">
        <label asp-for="customer.lastName">Last Name</label>
        <input type="text" name="lastName">
    </div>
    <div class="form-group">
        <label asp-for="customer.email">Email</label>
        <input type="email" name="emailAddress">
    </div>
    <button type="submit" class="btn btn-primary">Update User</button>
</form>
</br>

<table class="table table-striped table-bordered" data-toggle="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Creation Date</th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td>@Model.customer.firstName</td>
            <td>@Model.customer.lastName</td>
            <td>@Model.customer.email</td>
            <td>@Model.customer.creationDate</td>
        </tr>

    </tbody>
</table>